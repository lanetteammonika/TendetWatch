<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
       >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="@dimen/value_70"
                    android:layout_height="@dimen/value_70"
                    android:gravity="end">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/tender_image2"
                        android:layout_width="@dimen/value_70"
                        android:layout_height="@dimen/value_70"
                        android:src="@drawable/avtar" />

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/tender_image3"
                        android:layout_width="@dimen/value_30"
                        android:layout_height="@dimen/value_30"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentTop="true"
                        android:background="#00000000"
                        android:padding="@dimen/value_5"
                        android:src="@drawable/right_tick_3x"
                        android:visibility="gone"
                        app:civ_border_color="#FFF"
                        app:civ_border_width="@dimen/value_1" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/value_90"
                android:layout_marginLeft="@dimen/value_10"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Name:"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_15" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/value_2"
                        android:text="Title:"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_15" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/value_2"
                        android:text="Exp_Day:"
                        android:textColor="@color/colorBlack"
                        android:textSize="@dimen/text_15" />
                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/value_90"
                android:layout_marginLeft="@dimen/value_10"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginRight="@dimen/value_20"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tender_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="Name:"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/text_15" />

                        <TextView
                            android:id="@+id/tender_title"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/value_2"
                            android:ellipsize="end"
                            android:singleLine="true"
                            android:text="Title:"
                            android:textColor="@color/colorBlack"
                            android:textSize="@dimen/text_15" />


                            <TextView
                                android:id="@+id/tender_expdate"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/value_2"
                                android:text="Exp_Day:"
                                android:textColor="@color/colorBlack"
                                android:textSize="@dimen/text_15" />


                    </LinearLayout>

                    <ImageView
                        android:layout_width="@dimen/value_20"
                        android:layout_height="@dimen/value_20"
                        android:layout_alignParentRight="true"
                        android:layout_centerInParent="true"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/right_arr_3x" />
                </RelativeLayout>
            </LinearLayout>


        </LinearLayout>

        <LinearLayout
            android:id="@+id/stamp_remove"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="bottom"
            android:background="@color/transparent_grey"
            android:gravity="bottom|center"
            android:visibility="gone"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/removed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom|center"
                android:text="Removed!!!"
                android:textColor="@color/colorRED"
                android:textSize="15sp"
                android:textStyle="bold"
                android:layout_marginBottom="@dimen/value_7"
                />
        </LinearLayout>
    </FrameLayout>
</LinearLayout>