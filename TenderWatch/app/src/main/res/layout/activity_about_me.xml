<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/rlCountry"
    android:focusable="true"
    android:focusableInTouchMode="true"
    android:background="#FFF"
    >



    <android.support.v7.widget.Toolbar
        android:id="@+id/mtoolbar2"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary">
        <RelativeLayout
            android:id="@+id/toolbar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="top"
            android:layout_alignParentTop="true"
            >

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:src="@drawable/left_arr_3x"
                android:layout_gravity="center"/>

            <TextView
                android:id="@+id/txt_count"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:layout_marginLeft="57dp"
                android:layout_marginStart="57dp"
                android:layout_toEndOf="@+id/textView2"
                android:layout_toRightOf="@+id/textView2"
                android:text="1000"
                android:textColor="#000"
                android:textSize="@dimen/text_15" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_gravity="center"
                android:layout_toEndOf="@+id/txt_count"
                android:layout_toRightOf="@+id/txt_count"
                android:text="/1000"
                android:textColor="#000"
                android:textSize="@dimen/text_15" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/value_30"
                android:text="Back"
                android:textColor="#000"
                android:textSize="@dimen/text_15"
                android:id="@+id/textView2" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Save"
                android:textColor="#000"
                android:textSize="@dimen/text_15"
                android:layout_marginLeft="@dimen/value_30"
                android:layout_gravity="center"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/value_10"
                />

        </RelativeLayout>
    </android.support.v7.widget.Toolbar>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        <EditText
            android:id="@+id/txt_aboutme"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:hint="Enter some information about yourself"
            android:backgroundTint="@android:color/transparent"

            />

    </LinearLayout>
</LinearLayout>