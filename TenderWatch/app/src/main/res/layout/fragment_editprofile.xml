<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_gravity="center"
    android:background="@color/colorWhite"
    android:padding="@dimen/value_5">

    <LinearLayout
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:padding="@dimen/value_5"
        >
        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="@dimen/value_90"
            android:layout_height="@dimen/value_90"
            android:padding="@dimen/value_5"
            android:src="@drawable/avtar"
            android:id="@+id/edit_circleView"
            android:layout_gravity="center_horizontal"
            app:civ_border_width="@dimen/value_2"
            app:civ_border_color="#FF000000"
            />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="#FFF"
        android:gravity="center_horizontal"
        >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/value_40"
            android:layout_marginRight="@dimen/value_40"
            android:layout_marginTop="@dimen/value_10"
            android:id="@+id/edit_rlselectCountry"
            >
            <ImageView
                android:layout_width="@dimen/value_25"
                android:layout_height="@dimen/value_25"
                android:src="@drawable/country_3x"
                android:layout_marginTop="@dimen/value_7"
                />

            <EditText
                android:id="@+id/edit_country"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/value_40"
                android:text="Country"
                android:textSize="@dimen/text_20"
                android:backgroundTint="@android:color/transparent"
                android:enabled="false"
                android:singleLine="true"
                android:textColor="@color/colorBlack"
                />
            <ImageView
                android:layout_width="@dimen/value_20"
                android:layout_height="@dimen/value_20"
                android:src="@drawable/right_arr_3x"
                android:layout_gravity="center"
                android:layout_alignParentRight="true"
                android:layout_marginTop="@dimen/value_10"
                android:layout_marginRight="@dimen/value_5"/>
        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#808080"
            android:layout_marginLeft="@dimen/value_40"
            android:layout_marginRight="@dimen/value_40"
            android:layout_marginBottom="@dimen/value_5"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/value_40"
            android:layout_marginRight="@dimen/value_40"
            android:layout_marginTop="@dimen/value_10"
            >
            <ImageView
                android:layout_width="@dimen/value_25"
                android:layout_height="@dimen/value_25"
                android:src="@drawable/mobile_3x"
                android:layout_marginTop="@dimen/value_5"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/value_40"
                android:hint="CC Mobile No"
                android:textSize="@dimen/text_20"
                android:backgroundTint="@android:color/transparent"
                android:singleLine="true"
                android:inputType="number"
                android:id="@+id/edit_mobileNo"
                />

        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#808080"
            android:layout_marginLeft="@dimen/value_40"
            android:layout_marginRight="@dimen/value_40"
            android:layout_marginBottom="@dimen/value_5"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/value_40"
            android:layout_marginRight="@dimen/value_40"
            android:layout_marginTop="@dimen/value_10"
            >
            <ImageView
                android:layout_width="@dimen/value_25"
                android:layout_height="@dimen/value_25"
                android:src="@drawable/occupation_3x"
                android:layout_marginTop="@dimen/value_5"
                />

            <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/value_40"
                android:hint="Occupation"
                android:textSize="@dimen/text_20"
                android:backgroundTint="@android:color/transparent"
                android:singleLine="true"
                android:id="@+id/edit_occupation"
                />

        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#808080"
            android:layout_marginLeft="@dimen/value_40"
            android:layout_marginRight="@dimen/value_40"
            android:layout_marginBottom="@dimen/value_5"
            />
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/value_40"
            android:layout_marginRight="@dimen/value_40"
            android:layout_marginTop="@dimen/value_10"
            android:id="@+id/rlAboutme"
            >
            <ImageView
                android:layout_width="@dimen/value_25"
                android:layout_height="@dimen/value_25"
                android:src="@drawable/about_3x"
                android:layout_marginTop="@dimen/value_5"
                />

            <EditText
                android:id="@+id/edit_aboutme"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/value_40"
                android:text="About Me"
                android:ellipsize="end"
                android:textSize="@dimen/text_20"
                android:backgroundTint="@android:color/transparent"
                android:focusable="false"
                android:singleLine="true"
                android:textColor="@color/colorBlack"
                />

        </RelativeLayout>
        <View
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:background="#808080"
            android:layout_marginLeft="@dimen/value_40"
            android:layout_marginRight="@dimen/value_40"
            android:layout_marginBottom="@dimen/value_5"
            />
        <Button
            android:id="@+id/edit_btn_Update"
            android:layout_width="match_parent"
            android:layout_height="@dimen/value_40"
            android:layout_gravity="center"
            android:layout_marginBottom="@dimen/value_10"
            android:layout_marginLeft="@dimen/value_50"
            android:layout_marginRight="@dimen/value_50"
            android:layout_marginTop="@dimen/value_30"
            android:background="@drawable/button"
            android:text="Update"
            android:textAllCaps="false"
            android:textColor="@color/colorWhite"
            android:textSize="20sp" />
    </LinearLayout>

</LinearLayout>